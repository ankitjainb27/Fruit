<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_medium">


        <ImageView
            android:id="@+id/text_drawable"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <com.housing.typeracer.fonts.TextRegular
            android:id="@+id/host_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/text_drawable"
            android:layout_alignTop="@+id/text_drawable"
            android:layout_marginLeft="@dimen/padding_small"
            android:layout_toEndOf="@id/text_drawable"
            android:layout_toLeftOf="@+id/imageView"
            android:layout_toRightOf="@id/text_drawable"
            android:layout_toStartOf="@+id/imageView"
            android:gravity="center_vertical"
            android:text="hello"
            android:textColor="@color/blue_toolbar"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/add" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
